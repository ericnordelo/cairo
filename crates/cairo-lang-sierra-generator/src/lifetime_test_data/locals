Statements:
End:
  Unreachable

blk1:
Inputs:
Statements:
End:
  Callsite({v0 -> v5})

blk2:
Inputs: v1: core::NonZero::<core::felt>
Statements:
  (v2: core::felt) <- core::felt_add(v0, v0)
End:
  Fallthrough(4, {})

blk3 (root):
Inputs: v0: core::felt
Statements:
  () <- match core::felt_is_zero(v0) {
    IsZeroResult::Zero => blk1,
    IsZeroResult::NonZero => blk2,
  }
End:
  Return(v5)

blk4:
Inputs:
Statements:
  (v3: core::felt) <- 0u
  (v4: core::felt) <- test::foo(v3)
End:
  Callsite({v2 -> v5})

